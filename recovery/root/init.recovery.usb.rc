on early-init
    # Initialize USB configuration
    setprop sys.usb.configfs 0
    setprop sys.usb.config none
    setprop sys.usb.state none
    setprop persist.vendor.usb.config mtp,adb

on init
    # Create and mount configfs for USB gadget
    mkdir /config 0755 root root
    mount configfs none /config nodev noexec nosuid
    mkdir /config/usb_gadget/g1 0770 shell shell
    
    # Set basic USB device properties
    write /config/usb_gadget/g1/bcdUSB 0x0200
    write /config/usb_gadget/g1/bcdDevice 0x0100
    write /config/usb_gadget/g1/bDeviceClass 0x00
    write /config/usb_gadget/g1/bDeviceSubClass 0x00
    write /config/usb_gadget/g1/bDeviceProtocol 0x00
    write /config/usb_gadget/g1/idVendor 0x18d1  # Google VID for recovery
    write /config/usb_gadget/g1/idProduct 0xd001 # Recovery PID
    
    # Create string descriptors
    mkdir /config/usb_gadget/g1/strings/0x409 0770 shell shell
    write /config/usb_gadget/g1/strings/0x409/serialnumber ${ro.serialno}
    write /config/usb_gadget/g1/strings/0x409/manufacturer Xiaomi
    write /config/usb_gadget/g1/strings/0x409/product "Mi 11 Lite 5G NE"
    
    # Create functions
    mkdir /config/usb_gadget/g1/functions/ffs.adb 0770 shell shell
    mkdir /config/usb_gadget/g1/functions/mtp.gs0 0770 shell shell
    mkdir /config/usb_gadget/g1/functions/ptp.gs1 0770 shell shell
    mkdir /config/usb_gadget/g1/functions/mass_storage.0 0770 shell shell
    
    # Windows compatibility
    write /config/usb_gadget/g1/os_desc/use 1
    write /config/usb_gadget/g1/os_desc/b_vendor_code 0x1
    write /config/usb_gadget/g1/os_desc/qw_sign "MSFT100"
    
    # Create configuration
    mkdir /config/usb_gadget/g1/configs/b.1 0770 shell shell
    mkdir /config/usb_gadget/g1/configs/b.1/strings/0x409 0770 shell shell
    write /config/usb_gadget/g1/configs/b.1/MaxPower 500
    write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "Recovery"
    
    # Enable configfs
    setprop sys.usb.configfs 1

on post-fs-data
    # Create FFS directories for ADB
    mkdir /dev/usb-ffs 0770 shell shell
    mkdir /dev/usb-ffs/adb 0770 shell shell
    mount functionfs adb /dev/usb-ffs/adb uid=2000,gid=2000
    
    # Mount system and vendor for USB libraries
    mkdir /system/bin 0755 root root
    mkdir /vendor/bin 0755 root root

on boot
    # Set default USB configuration for recovery
    setprop sys.usb.config mtp,adb
    setprop sys.usb.mtp.device_type 3
    setprop persist.sys.usb.config mtp,adb
    
    # Update product info
    write /config/usb_gadget/g1/strings/0x409/product "Mi 11 Lite 5G NE (Recovery)"
    
    # Start ADB service
    start adbd

on property:sys.usb.config=mtp && property:sys.usb.configfs=1
    write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "MTP"
    # Clear existing functions
    rm /config/usb_gadget/g1/configs/b.1/f1
    rm /config/usb_gadget/g1/configs/b.1/f2
    rm /config/usb_gadget/g1/configs/b.1/f3
    # Set MTP function
    symlink /config/usb_gadget/g1/functions/mtp.gs0 /config/usb_gadget/g1/configs/b.1/f1
    # Set vendor/product ID for MTP
    write /config/usb_gadget/g1/idVendor 0x18d1
    write /config/usb_gadget/g1/idProduct 0x4ee1
    # Activate gadget
    write /config/usb_gadget/g1/UDC ${sys.usb.controller}
    setprop sys.usb.state ${sys.usb.config}

on property:sys.usb.config=mtp,adb && property:sys.usb.configfs=1
    write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "MTP+ADB"
