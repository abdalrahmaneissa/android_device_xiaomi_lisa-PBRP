# Handle USB controller property
on property:ro.boot.usbcontroller=*
    setprop sys.usb.controller ${ro.boot.usbcontroller}
    setprop vendor.usb.controller ${sys.usb.controller}

# ADB over USB
service adbd /sbin/adbd --root_seclabel=u:r:su:s0
    class core
    socket adbd stream 660 system system
    disabled
    seclabel u:r:adbd:s0

# USB configuration when FFS is ready
on property:sys.usb.ffs.ready=1
    write /config/usb_gadget/g1/UDC ${sys.usb.controller}
    setprop sys.usb.state ${sys.usb.config}

# Handle configfs disable (fallback)
on property:ro.boot.usbconfigfs=false
    setprop sys.usb.configfs 0

# Cleanup on shutdown
on shutdown
    write /config/usb_gadget/g1/UDC
    setprop sys.usb.config none
    setprop sys.usb.state none